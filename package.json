{
  "name": "satellite-ui",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier . -c",
    "format:fix": "prettier . --write",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@commitlint/types": "^19.0.3",
    "@cosmonic/eslint-config": "workspace:*",
    "@cosmonic/prettier-config": "workspace:*",
    "@cosmonic/tailwind-config": "workspace:*",
    "@cosmonic/typescript-config": "workspace:*",
    "commitizen": "^4.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^1.13.3",
    "typescript": "5.5.0-dev.20240430"
  },
  "type": "module",
  "packageManager": "pnpm@9.0.0-alpha.8+sha256.a433a59569b00389a951352956faf25d1fdf43b568213fbde591c36274d4bc30",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,cts,mjs,mts,md,json}": [
      "prettier --write"
    ]
  }
}
